<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timur.gps2.SavePositionActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/latitude"
        android:ems="10"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/eingabeLat"
        app:layout_constraintRight_toLeftOf="@+id/ortAnlegen"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/longitude"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/eingabeLat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/eingabeLong"
        app:layout_constraintRight_toLeftOf="@+id/ortAnlegen"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/ortsname"
        android:id="@+id/eingabeOrt"
        android:ems="10"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eingabeLong"
        app:layout_constraintRight_toLeftOf="@+id/ortAnlegen"
        app:layout_constraintHorizontal_bias="0.543" />

    <Button
        android:id="@+id/ortAnlegen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ortAnlegen"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eingabeLat"/>

</android.support.constraint.ConstraintLayout>